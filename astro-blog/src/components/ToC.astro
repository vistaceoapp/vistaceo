---
interface Heading {
  level: number;
  text: string;
  id: string;
}

interface Props {
  headings: Heading[];
}

const { headings } = Astro.props;
---

{headings.length > 0 && (
  <nav class="toc" aria-label="Tabla de contenidos">
    <div class="toc-header">
      <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="8" y1="6" x2="21" y2="6"/>
        <line x1="8" y1="12" x2="21" y2="12"/>
        <line x1="8" y1="18" x2="21" y2="18"/>
        <line x1="3" y1="6" x2="3.01" y2="6"/>
        <line x1="3" y1="12" x2="3.01" y2="12"/>
        <line x1="3" y1="18" x2="3.01" y2="18"/>
      </svg>
      <span class="toc-title">Contenido</span>
    </div>
    <ul class="toc-list">
      {headings.map((heading) => (
        <li class={`toc-item toc-level-${heading.level}`}>
          <a href={`#${heading.id}`} class="toc-link">
            {heading.text}
          </a>
        </li>
      ))}
    </ul>
  </nav>
)}

<style>
  /* ToC - Ultra Responsive */
  .toc {
    background: var(--muted);
    border: 1px solid var(--border);
    border-radius: 0.75rem;
    padding: 1rem;
    margin: 1.25rem 0;
  }

  @media (min-width: 480px) {
    .toc {
      padding: 1.25rem;
      margin: 1.5rem 0;
    }
  }

  @media (min-width: 768px) {
    .toc {
      border-radius: 1rem;
      padding: 1.5rem;
      margin: 2rem 0;
    }
  }
  
  .toc-header {
    display: flex;
    align-items: center;
    gap: 0.4rem;
    margin-bottom: 0.75rem;
    color: var(--foreground);
  }

  @media (min-width: 640px) {
    .toc-header {
      gap: 0.5rem;
      margin-bottom: 1rem;
    }
  }
  
  .toc-header svg {
    opacity: 0.6;
    width: 16px;
    height: 16px;
  }

  @media (min-width: 640px) {
    .toc-header svg {
      width: 18px;
      height: 18px;
    }
  }
  
  .toc-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  @media (min-width: 640px) {
    .toc-title {
      font-size: 0.875rem;
    }
  }
  
  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    /* Limit height on very small screens */
    max-height: 250px;
    overflow-y: auto;
  }

  @media (min-width: 640px) {
    .toc-list {
      max-height: none;
      overflow-y: visible;
    }
  }
  
  .toc-item {
    margin-bottom: 0.4rem;
  }

  @media (min-width: 640px) {
    .toc-item {
      margin-bottom: 0.5rem;
    }
  }
  
  .toc-level-3 {
    padding-left: 0.875rem;
  }

  @media (min-width: 640px) {
    .toc-level-3 {
      padding-left: 1rem;
    }
  }
  
  .toc-link {
    color: var(--foreground-muted);
    text-decoration: none;
    font-size: 0.825rem;
    line-height: 1.45;
    display: block;
    padding: 0.2rem 0;
    transition: color var(--transition-fast);
    /* Prevent long text overflow */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media (min-width: 480px) {
    .toc-link {
      font-size: 0.875rem;
      white-space: normal;
    }
  }

  @media (min-width: 640px) {
    .toc-link {
      font-size: 0.9rem;
      line-height: 1.5;
      padding: 0.25rem 0;
    }
  }
  
  .toc-link:hover {
    color: var(--primary);
  }
</style>
