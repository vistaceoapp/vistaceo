---
import type { BlogPost } from '../lib/supabase';
import { formatDate } from '../lib/text';
import { getCluster } from '../lib/clusters';

interface Props {
  post: BlogPost;
}

const { post } = Astro.props;
// Use category first (new 12-cluster system), fallback to pillar (legacy)
const cluster = getCluster(post.category || post.pillar);
---

<div class="post-meta">
  <div class="meta-row">
    <span class="meta-item">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
        <circle cx="12" cy="7" r="4"/>
      </svg>
      {post.author_name || 'Equipo VistaCEO'}
    </span>
    {post.publish_at && (
      <span class="meta-item">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
          <line x1="16" y1="2" x2="16" y2="6"/>
          <line x1="8" y1="2" x2="8" y2="6"/>
          <line x1="3" y1="10" x2="21" y2="10"/>
        </svg>
        {formatDate(post.publish_at)}
      </span>
    )}
    {post.reading_time_min && (
      <span class="meta-item">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"/>
          <polyline points="12 6 12 12 16 14"/>
        </svg>
        {post.reading_time_min} min
      </span>
    )}
    {cluster && (
      <a href={`/tema/${cluster.slug}`} class="post-cluster-badge">
        {cluster.emoji} {cluster.name}
      </a>
    )}
  </div>
  
  {post.tags && post.tags.length > 0 && (
    <div class="meta-badges">
      {post.tags.slice(0, 3).map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
</div>

<style>
  .post-meta {
    margin-top: 1.25rem;
  }
  
  .meta-row {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.75rem 1.25rem;
    color: var(--foreground-muted);
    font-size: 0.9rem;
  }
  
  .meta-item {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    white-space: nowrap;
  }
  
  .meta-item svg {
    opacity: 0.6;
    flex-shrink: 0;
  }
  
  .meta-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }
  
  .post-cluster-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    padding: 0.35rem 0.75rem;
    background: var(--muted);
    color: var(--primary);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 600;
    border-radius: 9999px;
    transition: all var(--transition-fast);
    white-space: nowrap;
  }
  
  .post-cluster-badge:hover {
    background: var(--primary);
    color: var(--primary-foreground);
  }
  
  .tag {
    display: inline-block;
    padding: 0.25rem 0.625rem;
    background: var(--muted);
    color: var(--foreground-muted);
    font-size: 0.75rem;
    font-weight: 500;
    border-radius: 0.375rem;
  }
</style>
