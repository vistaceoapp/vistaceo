---
import type { BlogPost } from '../lib/supabase';
import { formatDate, truncate } from '../lib/text';
import { getCluster } from '../lib/clusters';

interface Props {
  posts: BlogPost[];
  currentCluster: string | null;
}

const { posts, currentCluster } = Astro.props;
const cluster = getCluster(currentCluster);
---

{posts.length > 0 && (
  <aside class="related-section">
    <h2 class="related-title">ðŸ“š ArtÃ­culos Relacionados</h2>
    
    <div class="posts-grid">
      {posts.map((post) => (
        <a href={`/${post.slug}`} class="post-card">
          {post.hero_image_url && (
            <div class="post-card-image">
              <img 
                src={post.hero_image_url} 
                alt={post.image_alt_text || post.title}
                loading="lazy"
              />
            </div>
          )}
          <div class="post-card-content">
            <h3 class="post-card-title">{post.title}</h3>
            {post.excerpt && (
              <p class="post-card-excerpt">{truncate(post.excerpt, 100)}</p>
            )}
            <span class="post-card-meta">{formatDate(post.publish_at)}</span>
          </div>
        </a>
      ))}
    </div>
    
    {cluster && (
      <div class="related-cta">
        <a href={`/tema/${cluster.slug}`} class="related-link">
          Ver todos los artÃ­culos de {cluster.emoji} {cluster.name}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
    )}
  </aside>
)}

<style>
  .related-section {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid var(--border);
  }
  
  .related-title {
    font-size: 1.35rem;
    font-weight: 700;
    color: var(--foreground);
    margin-bottom: 1.5rem;
  }
  
  .related-cta {
    margin-top: 2rem;
    text-align: center;
  }
  
  .related-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 600;
    font-size: 0.95rem;
    transition: color var(--transition-fast);
  }
  
  .related-link:hover {
    color: var(--accent);
  }
</style>
