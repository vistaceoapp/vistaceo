---
// Header - PIXEL-PERFECT clone of vistaceo.com HeaderV3
// Must be visually identical to the main site
const MAIN_SITE = 'https://www.vistaceo.com';

const navItems = [
  { label: 'Características', href: `${MAIN_SITE}/#características` },
  { label: 'Precios', href: `${MAIN_SITE}/#precios` },
  { label: 'FAQ', href: `${MAIN_SITE}/#faq` },
  { label: 'Blog', href: '/', active: true },
];
---

<header class="site-header" id="site-header">
  <div class="container">
    <div class="header-inner">
      <!-- Logo -->
      <a href={MAIN_SITE} class="logo-link">
        <!-- Mobile: Icon only -->
        <img 
          src="/logo-icon.png" 
          alt="VistaCEO" 
          class="logo-icon" 
          width="36" 
          height="36"
        />
        <!-- Desktop: Full text logo -->
        <img 
          src="/logo-full-text.png" 
          alt="VistaCEO" 
          class="logo-full" 
          width="140" 
          height="32"
        />
      </a>
      
      <!-- Desktop Navigation -->
      <nav class="nav-desktop">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class={`nav-link ${item.active ? 'nav-active' : ''}`}
          >
            {item.label}
          </a>
        ))}
      </nav>
      
      <!-- Right side actions -->
      <div class="header-actions">
        <!-- Login (desktop) -->
        <a href={`${MAIN_SITE}/auth`} class="btn-ghost">
          Iniciar sesión
        </a>
        
        <!-- CTA Button -->
        <a href={`${MAIN_SITE}/auth`} class="btn-cta">
          <span class="cta-short">gratis</span>
          <span class="cta-full">Empezar gratis</span>
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        
        <!-- Mobile menu button -->
        <button class="mobile-btn" id="mobile-btn" aria-label="Menú">
          <svg class="icon-menu" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="12" x2="21" y2="12"/>
            <line x1="3" y1="6" x2="21" y2="6"/>
            <line x1="3" y1="18" x2="21" y2="18"/>
          </svg>
          <svg class="icon-close" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:none;">
            <line x1="18" y1="6" x2="6" y2="18"/>
            <line x1="6" y1="6" x2="18" y2="18"/>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <!-- Mobile Menu -->
  <div class="mobile-menu" id="mobile-menu">
    <nav class="mobile-nav">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class={`mobile-link ${item.active ? 'mobile-active' : ''}`}
        >
          {item.label}
        </a>
      ))}
      <div class="mobile-divider"></div>
      <a href={`${MAIN_SITE}/auth`} class="mobile-login">
        Iniciar sesión
      </a>
    </nav>
  </div>
</header>

<script>
  const mobileBtn = document.getElementById('mobile-btn');
  const mobileMenu = document.getElementById('mobile-menu');
  const menuIcon = mobileBtn?.querySelector('.icon-menu');
  const closeIcon = mobileBtn?.querySelector('.icon-close');
  
  mobileBtn?.addEventListener('click', () => {
    const isOpen = mobileMenu?.classList.contains('open');
    mobileMenu?.classList.toggle('open', !isOpen);
    if (menuIcon && closeIcon) {
      (menuIcon as HTMLElement).style.display = isOpen ? 'block' : 'none';
      (closeIcon as HTMLElement).style.display = isOpen ? 'none' : 'block';
    }
  });
  
  // Scroll effect
  window.addEventListener('scroll', () => {
    const header = document.getElementById('site-header');
    header?.classList.toggle('scrolled', window.scrollY > 20);
  }, { passive: true });
</script>

<style>
  /* ===== HEADER - Matches HeaderV3.tsx exactly ===== */
  .site-header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background: rgba(255, 255, 255, 0.6);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    transition: all 0.3s ease;
  }
  
  .site-header.scrolled {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.03);
  }
  
  :global(.dark) .site-header {
    background: rgba(0, 0, 0, 0.6);
  }
  
  :global(.dark) .site-header.scrolled {
    background: rgba(0, 0, 0, 0.9);
    border-bottom-color: rgba(255, 255, 255, 0.06);
  }
  
  .container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 64px;
  }
  
  @media (min-width: 768px) {
    .header-inner {
      height: 72px;
    }
  }
  
  /* Logo - matches exactly */
  .logo-link {
    display: flex;
    align-items: center;
    flex-shrink: 0;
    text-decoration: none;
  }
  
  .logo-icon {
    height: 36px;
    width: 36px;
    object-fit: contain;
    display: block;
  }
  
  .logo-full {
    height: 32px;
    width: auto;
    object-fit: contain;
    display: none;
  }
  
  @media (min-width: 1024px) {
    .logo-icon {
      display: none;
    }
    .logo-full {
      display: block;
    }
  }
  
  /* Desktop Nav */
  .nav-desktop {
    display: none;
    align-items: center;
    gap: 0.25rem;
  }
  
  @media (min-width: 1024px) {
    .nav-desktop {
      display: flex;
    }
  }
  
  .nav-link {
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--foreground-muted);
    text-decoration: none;
    transition: color 0.15s;
  }
  
  .nav-link:hover {
    color: var(--foreground);
  }
  
  .nav-active {
    color: var(--primary);
  }
  
  /* Actions */
  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  
  @media (min-width: 640px) {
    .header-actions {
      gap: 0.75rem;
    }
  }
  
  .btn-ghost {
    display: none;
    padding: 0.5rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--foreground);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.15s;
  }
  
  .btn-ghost:hover {
    background: var(--muted);
  }
  
  @media (min-width: 640px) {
    .btn-ghost {
      display: flex;
    }
  }
  
  .btn-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    padding: 0.5rem 1rem;
    background: linear-gradient(135deg, #2692DC, #746CE6);
    color: white;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: 9999px;
    box-shadow: 0 4px 14px rgba(38, 146, 220, 0.2);
    transition: all 0.2s;
  }
  
  @media (min-width: 640px) {
    .btn-cta {
      padding: 0.5rem 1.25rem;
    }
  }
  
  .btn-cta:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 20px rgba(38, 146, 220, 0.3);
    color: white;
  }
  
  .cta-short {
    display: inline;
  }
  
  .cta-full {
    display: none;
  }
  
  @media (min-width: 480px) {
    .cta-short {
      display: none;
    }
    .cta-full {
      display: inline;
    }
  }
  
  .mobile-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    background: transparent;
    border: none;
    color: var(--foreground);
    cursor: pointer;
  }
  
  @media (min-width: 1024px) {
    .mobile-btn {
      display: none;
    }
  }
  
  /* Mobile Menu */
  .mobile-menu {
    display: none;
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(20px);
    -webkit-backdrop-filter: blur(20px);
    border-top: 1px solid var(--border);
    animation: slideIn 0.2s ease-out;
  }
  
  :global(.dark) .mobile-menu {
    background: rgba(0, 0, 0, 0.95);
  }
  
  .mobile-menu.open {
    display: block;
  }
  
  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }
  
  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .mobile-nav {
    padding: 1rem;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  
  .mobile-link {
    padding: 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--foreground);
    text-decoration: none;
    border-radius: 0.5rem;
    transition: all 0.15s;
  }
  
  .mobile-link:hover {
    background: var(--muted);
    color: var(--primary);
  }
  
  .mobile-active {
    color: var(--primary);
  }
  
  .mobile-divider {
    height: 1px;
    background: var(--border);
    margin: 0.5rem 0;
  }
  
  .mobile-login {
    padding: 0.75rem;
    font-size: 1rem;
    font-weight: 500;
    color: var(--foreground-muted);
    text-decoration: none;
    border-radius: 0.5rem;
    border: 1px solid var(--border);
    text-align: center;
    transition: all 0.15s;
  }
  
  .mobile-login:hover {
    background: var(--muted);
    border-color: var(--primary);
    color: var(--primary);
  }
</style>
